# Imagen base con Node + Chrome estable
FROM ghcr.io/puppeteer/puppeteer:latest

# Crear directorio de la app
WORKDIR /app

# Copiar package.json
COPY package*.json ./

# Instalar dependencias
RUN npm install

# Copiar el resto de la app
COPY . .

# Exponer el puerto para Railway
EXPOSE 3000

# Comando de inicio
CMD [ "npm", "start" ]
